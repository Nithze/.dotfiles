#!/bin/sh

case $BLOCK_BUTTON in
    1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
    2) setsid -f "$TERMINAL" -e htop ;;
    3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

total_memory=$(free --mebi | sed -n '2{p;q}' | awk '{printf ("%2.2f", ($2 / 1024))}')
used_memory=$(free --mebi | sed -n '2{p;q}' | awk '{printf ("%2.2f", ($3 / 1024))}')
percentage_used=$(awk -v used="$used_memory" -v total="$total_memory" 'BEGIN {printf "%2.2f", (used / total * 100)}')

echo -e "\033[0;32mMEM $percentage_used%\033[0m"

