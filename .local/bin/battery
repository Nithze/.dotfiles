#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ðŸ”‹ Battery module" "ðŸ”‹: discharging
ðŸ›‘: not charging
â™»: stagnant charge
ðŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="" ;;
		"Discharging") status="" ;;
		"Charging") status="âš¡" ;;
		"Not charging") status="" ;;
		"Unknown") status="â™»ï¸" ;;
		*) exit 1 ;;
	esac
	capacity="$(cat "$battery/capacity" 2>&1)"
	# Will make a warn variable if discharging and low
	[ "$status" = "ï‰„" ] && [ "$capacity" -le 25 ] && warn="!"

    # Add battery level conditions and symbols
    if ((capacity >= 0 && capacity <= 10)); then
        battery_string="ï‰„ "
    elif ((capacity >= 11 && capacity <= 30)); then
        battery_string="ï‰ƒ "
    elif ((capacity >= 31 && capacity <= 50)); then
        battery_string="ï‰‚ "
    elif ((capacity >= 51 && capacity <= 75)); then
        battery_string="ï‰ "
    else
        battery_string="ï‰€ "
    fi

	# Prints the info
	printf "%s%s%s%d%%" "$battery_string" "$status" "$warn" "$capacity"; unset warn
done && printf "\\n"

