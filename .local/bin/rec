#!/bin/bash

INRES="2160x1440"
OUTRES="2160x1440"
FPS="60"
AUDIO_SOURCE="alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink.monitor"

ffmpeg -f x11grab -s "$INRES" -r "$FPS" -i :0.0 -f pulse -i "$AUDIO_SOURCE" \
-vcodec libx264 -s "$OUTRES" -acodec libmp3lame -ab 128k -ar 44100 \
-threads 0 -f flv "$1"

